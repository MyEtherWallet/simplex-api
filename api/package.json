{
    "name": "simplex-api",
    "version": "0.1.0",
    "description": "API to handle simplex integration",
    "main": "index.js",
    "scripts": {
        "build:other": "npm run lint",
        "build": "rimraf dist/ && babel ./src --out-dir dist/",
        "start:docker": "npm run build && pm2-runtime  dist/index.js",
        "start": "npm run build && node dist/index.js",
        "prod": "node dist/index.js",
        "events": "npm run build && node dist/simplex_events/index.js",
        "eventsProd": "node dist/simplex_events/",
        "getExchangeRatesProd": "node dist/currency_rates/",
        "dev": "env NODE_ENV=development nodemon --exec npm start",
        "test": "npm run lint && env NODE_ENV=development mocha --exit --require babel-core/register test/*",
        "lint": "standard --fix 'src/**/*.js'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MyEtherWallet/simplex-api.git"
    },
    "keywords": [
        "simplex",
        "api",
        "nanobox"
    ],
    "author": "kvhnuke",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MyEtherWallet/simplex-api/issues"
    },
    "homepage": "https://github.com/MyEtherWallet/simplex-api#readme",
    "dependencies": {
        "async": "^2.6.4",
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "debug": "^4.1.1",
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "express-recaptcha": "^4.0.2",
        "logging": "^3.2.0",
        "mongoose": "^5.5.10",
        "mongoose-timestamp": "^0.6.0",
        "node-cron": "^2.0.3",
        "request": "^2.87.0",
        "uuid": "^3.2.1",
        "validate": "^4.4.1",
        "wallet-address-validator": "^0.1.7"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "bignumber.js": "^9.0.0",
        "chai": "^4.1.2",
        "mocha": "^5.2.0",
        "nodemon": "^1.17.5",
        "rimraf": "^2.6.2",
        "standard": "^11.0.1",
        "supertest": "^3.1.0"
    }
}
