{
    "name": "simplex-api",
    "version": "0.1.0",
    "description": "API to handle simplex integration",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dist/ && babel ./src --out-dir dist/",
        "start": "npm run build && node dist/index.js",
        "prod": "node dist/index.js",
        "dev": "env NODE_ENV=development nodemon --exec npm start",
        "test": "env NODE_ENV=development mocha --exit --require babel-core/register test/*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MyEtherWallet/simplex-api.git"
    },
    "keywords": [
        "simplex",
        "api",
        "nanobox"
    ],
    "author": "kvhnuke",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MyEtherWallet/simplex-api/issues"
    },
    "homepage": "https://github.com/MyEtherWallet/simplex-api#readme",
    "dependencies": {
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "express-recaptcha": "^4.0.2",
        "logging": "^3.2.0",
        "mongoose": "^5.1.6",
        "mongoose-timestamp": "^0.6.0",
        "request": "^2.87.0",
        "uuid": "^3.2.1",
        "validate": "^4.4.1"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "chai": "^4.1.2",
        "mocha": "^5.2.0",
        "nodemon": "^1.17.5",
        "rimraf": "^2.6.2",
        "supertest": "^3.1.0"
    }
}
